{% extends 'BlogBundle::layout.html.twig' %}

{% block header %}<h1>Blog posts</h1>{% endblock %}

{% block body %}
    <div>
        <h3>Title</h3>
        <p class="bg-info">{{ blogpost.title }}</p>
        <h3>Autor</h3>
        <p class="bg-info">{{ blogpost.autor }}</p>
        <h3>Content</h3>
        <p class="bg-info">{{ blogpost.content|nl2br }}</p>
        <h3>Created at</h3>
        <p class="bg-info">{{ blogpost.createdAt|date }}</p>
        h3>Published at</h3>
        <p class="bg-info">{{ blogpost.publishedAt|date }}</p>
        <hr />
        {% if is_granted('ROLE_ADMIN') %}
            <a class="btn btn-primary" href="{{ path('post_publish', {'id': blogpost.id, 'token': csrf_token('post_publish.' ~ blogpost.id)}) }}">Mark as published</a>
        {% endif %}

    </div>
{% endblock %}
