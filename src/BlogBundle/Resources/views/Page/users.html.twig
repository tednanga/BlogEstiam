{# src/Blogger/BlogBundle/Resources/views/Page/users.html.twig #}
{% extends 'BlogBundle::layout.html.twig' %}

{% block blog_tagline %}<h1>Users</h1>{% endblock %}

{% block body %}
    <ul>
        {% for user in users %}
            <li><strong>{{ user.fullname }}</strong> - {{ user.username }} ({{ user.email }})</li>
        {% else %}
            <li>No users.</li>
        {% endfor %}
    </ul>
{% endblock %}
