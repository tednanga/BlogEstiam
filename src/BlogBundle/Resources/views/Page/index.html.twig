{# src/Blogger/BlogBundle/Resources/views/Page/index.html.twig #}
{% extends 'BlogBundle::layout.html.twig' %}


{% block blog_tagline %}<h1>List of blog posts</h1>{% endblock %}

{% block body %}

    {% if blogposts|length > 0 %}
        <table class="table">
            <thead>
            <tr>
                <th>{{ 'title' }}</th>
                <th>{{ 'plublished_at' }}</th>
                <th>{{ 'content'}}</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for blogpost in blogposts %}
                <tr>
                    <td>{{ blogpost.title }}</td>
                    <td>{{ blogpost.published_at }}</td>
                    <td>{{ blogpost.conten | slice(0,100) }}</td>
                    <td><a class="btn btn-primary" href="{{ path('BlogBundle:BlogPost:show.html.twig', {'id': contact.id}) }}">View</a></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">No contacts.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="alert alert-warning">No contacts.</div>
    {% endif %}

{% endblock %}



